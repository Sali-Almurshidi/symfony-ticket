{% extends 'base.html.twig' %}

{% block title %}Hello CustomerController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ customerName }}! âœ…</h1>

    {{ form_start(addTicketForm) }}

    {# To display all the form childs #}

    {{ form_widget(addTicketForm) }}

    <button> Add </button>

    {{ form_end(addTicketForm) }}
    <br>
    {#<h3>total of open Ticket {{ totalOpenTicket }}</h3>#}
    <br>
    {% for ticket in tickets %}

        {% if ticket.ticketStatus != 'doNotFix' %}

        {{ ticket.ticketTitle }}

        {{ ticket.ticketStatus }}

        <button><a href="{{ path('customer_ticket', {'ticket': ticket.id}) }}" >show</a></button>

        <br>
        {% endif %}
    {% endfor %}

    <button><a href="{{ path('app_logout')}}" >Logout</a></button>
</div>
{% endblock %}
